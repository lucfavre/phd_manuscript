	shortjournal = {International Journal of Heat and Mass Transfer},
	author = {Zhou, Pei and Huang, Ronghua and Huang, Sheng and Zhang, Yu and Rao, Xiaoxuan},
	urldate = {2022-07-20},
	date = {2020-03-01},
	langid = {english},
	keywords = {Bubble departure diameter, Force balance analysis, Subcooled flow boiling, Bubble contact diameter},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Luc\\Zotero\\storage\\QESVK68I\\Zhou et al. - 2020 - Experimental investigation on bubble contact diame.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Luc\\Zotero\\storage\\LFHFJR3U\\S0017931019348240.html:text/html},
